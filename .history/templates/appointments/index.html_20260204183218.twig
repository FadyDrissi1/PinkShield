{% extends 'base.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4" style="border-radius: 15px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 style="color: #d63384;">Mes rendez-vous</h2>
            <a href="{{ path('appointments_new') }}" class="btn text-white" style="background-color: #d63384; border-radius: 20px;">
                + Prendre un rendez-vous
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date & Heure</th>
                        <th>Médecin</th>
                        <th>Motif</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                {% for appointment in appointments %}
                    <tr>
                        <td>{{ appointment.date|date('d/m/Y H:i') }}</td>
                        <td>{{ appointment.doctorname|default('Non spécifié') }}</td>
                        <td>{{ appointment.motif }}</td>
                        <td>
                            <span class="badge rounded-pill {% if appointment.status == 'En attente' %}bg-warning{% else %}bg-success{% endif %}">
                                {{ appointment.status }}
                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun rendez-vous trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
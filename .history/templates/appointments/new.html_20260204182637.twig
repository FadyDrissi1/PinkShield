{% block body %}
    <div class="container mt-4">
        <div class="card shadow p-4">
            <h2 class="text-pink mb-4">Prendre un rendez-vous</h2>
            
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    <label class="form-label">Date et heure du rendez-vous</label>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Motif de consultation</label>
                    {{ form_widget(form.motif, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Contrôle annuel'}}) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Médecin souhaité</label>
                    {{ form_widget(form.doctorname, {'attr': {'class': 'form-control'}}) }}
                </div>

                {# On cache le champ status pour qu'il soit automatique, ou on le laisse si tu veux le choisir #}
                <div class="d-none">
                    {{ form_widget(form.status) }}
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary bg-pink border-0" type="submit">Confirmer le rendez-vous</button>
                    <a href="{{ path('appointments') }}" class="btn btn-secondary ms-2">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
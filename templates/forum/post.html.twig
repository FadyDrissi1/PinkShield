        <div class="card">
            <h2>Publier un message</h2>
            <form method="post">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="6" style="width:100%"></textarea>
                <button class="btn" type="submit">Publier</button>
            </form>
        </div>
    </div>
{% endblock %}

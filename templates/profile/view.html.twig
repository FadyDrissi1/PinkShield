{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <h2>Mon profil</h2>
            <p>Email: {{ app.user.userIdentifier }}</p>
            <p>Prénom: {{ app.user.firstName }}</p>
            <p>Nom: {{ app.user.lastName }}</p>
            <p>Téléphone: {{ app.user.phone }}</p>
            <p>Genre: {{ app.user.gender }}</p>

            <p><a href="{{ path('profile_edit') }}">Modifier mes informations</a></p>
        </div>
    </div>
{% endblock %}
